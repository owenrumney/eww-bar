(include "listeners.yuck")
(include "metrics.yuck")
(include "pollers.yuck")
(include "revealer.yuck")
(include "variables.yuck")

(defwidget bar []
  (centerbox :orientation "h"
    (box :orientation "h" :space-evenly false (workspaces) )
    (box :orientation "h" :space-evenly false (label :text " ${time} - ")  (weather) )
    (sidestuff)))

(defwidget bottombar []
  (centerbox :orientation "h" :space-evenly false
  (box :halign "start" :orientation "h" :space-evenly false (workspaces))
  (box :halign "end" :orientation "h" :space-evenly false)
   (box :orientation "h" :halign "end" :space-evenly false
       (metric :label ""
               :value {EWW_RAM.used_mem_perc})
       (metric :label ""
               :onclick "gnome-system-monitor"
               :value {EWW_CPU.avg})
      (metric  :label ""
               :value "${round(EWW_DISK["/"].used_perc, 0)}")
               (network)
        )
    )
      )

      (defwidget icon-module [icon ?class ?visible]
  (box :class "${class} icon-module"
       :orientation "h"
       :halign "start"
       :space-evenly false
       :visible {visible ?: true} ; because the argument is optional
    (label :class "icon-module__icon" :text "${icon}")
    (children)))

(defwidget sidestuff []
  (box :class "sidestuff" :orientation "h" :space-evenly false :halign "end" :spacing 10
  
    (metric :label "🔊"
            :value volume
            :onchange "amixer -D pulse sset Master {}%")

    
    (box :orientation "h" :spacing 2 :space-evenly false :halign "end" (spotify) (docker))))

(defwidget workspaces [] (literal :class "workspaces" :content "${workspace}"))

(defwidget weather [] 
  (icon-module :icon "${weather.icon}" 
    (label :text "${weather.description}")))

(defwidget music []
  (box :class "music"
       :orientation "h"
       :space-evenly false
       :halign "center"
    {music != "" ? "🎵${music}" : ""}))







(defwidget spotify [?class]
  (box :space-evenly false
       :class "hover-module ${class}"
    (revealer-on-hover :class "hl-on-hover"
                       :var revealSpotify
                       :varname "revealSpotify"
                       :transition "slideleft"
                       :class "spotify"
          
      (hovered-sign :var revealSpotify 
      (label :class "spotify" :text "")
      (label :class "spotify" :text  ""))
      (label :class "spotify" :text  " ${music} ")
      "    ")))

(defwidget docker [?class]
  (box :space-evenly false
       :class "hover-module ${class}"
    (revealer-on-hover :class "hl-on-hover"
                       :var revealDocker
                       :varname "revealDocker"
                       :transition "slideleft"
                       :class "docker"
          
      (hovered-sign :var revealDocker 
      (label :class "docker" :text "")
      (label :class "docker" :text  ""))
      (label :class "docker-text" :text  "  Running: ${dockerContainers}, Images: ${dockerImages} ")
      "    ")))

(defwidget github [?class]
  (box :space-evenly false
       :class "hover-module ${class}"
    (revealer-on-hover :class "hl-on-hover"
                       :var revealGithub
                       :varname "revealGithub"
                       :transition "slideleft"
                       :class "docker"
          
      (hovered-sign :var revealDocker 
      (label :class "docker" :text "<")
      (label  :class "docker" :text  "<"))
      (label :class "docker-text" :text  "  Running: ${dockerContainers}, Images: ${dockerImages} ")
      "    ")))







(defwidget network []  (label :text "${wirelessId}: ${round(EWW_NET[interfaceId].NET_UP / 1000000, 2)}  ${round(EWW_NET[interfaceId].NET_DOWN / 1000000, 2)} "))

(defwindow bar
  :monitor 0
  :windowtype "dock"
  :geometry (geometry :x "0%"
                      :y "0%"
                      :width "90%"
                      :height "10px"
                      :anchor "top center")
  :reserve (struts :side "top" :distance "4%")
  (bar))

(defwindow bottombar
  :monitor 0
  :windowtype "dock"
  :geometry (geometry :x "0%"
                      :y "0%"
                      :width "90%"
                      :height "10px"
                      :anchor "bottom center")
  :reserve (struts :side "bottom" :distance "4%")
  (bottombar))

(defwidget icon-module [icon ?class ?visible]
  (box :class "${class} icon-module"
       :orientation "h"
       :halign "end"
       :space-evenly false
       :visible {visible ?: true} ; because the argument is optional
    (label :class "icon-module__icon" :text "${icon}")
    (children)))