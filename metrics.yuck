(defwidget metric [icon value ?onchange ?onclick ?class]
  (box :orientation "h"
       :class "metric"
       :space-evenly false
    (button :onclick "${onclick}" (label :class "label" :text icon))
    (scale :class {class == "volume" ? "" : value > 50 ? value > 75 ? "error" : "warning" : "normal"}
           :min 0
           :max 101
           :active {onchange != ""}
           :value value
           :onchange onchange)))